pipeline 
{
    agent any

    
stages{
    stage("Build code")
    {
        steps{
            sh "mvn install"
            sh " ls -lrt target/"

        }
    }

    stage("code analysis")
    {
        steps{

             withSonarQubeEnv('sonarqube-server') {
                sh 'mvn clean package sonar:sonar'
              }
        }
        
    }

    stage("Quality Gate") {
            steps {
              timeout(time: 5, unit: 'MINUTES') {
                waitForQualityGate abortPipeline: true
              }
            }
          }
}
}