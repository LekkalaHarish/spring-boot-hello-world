pipeline
{
    agent any
    stages
    {
        stage("Build code")
        {
            steps
            {
                sh """
                mvn install
                ls -lrt target/
                """
            }
        }

        stage("run unit test")
        {
            steps
            {
                sh"mvn test"
            }
        }
         stage("code analysis")
        {
        steps{

            withSonarQubeEnv('sonar-env')
              {
                sh """
                property("sonar.projectKey", "project-sonar")
                property("sonar.organization", "myOrganization")
                property("sonar.host.url", "http://192.168.29.10:9000/")

                """
              }
            }
        
        }
        stage("Quality Gate") {
            steps 
            {
              timeout(time: 5, unit: 'MINUTES') {
                waitForQualityGate abortPipeline: true
              }
            }
          }
    }
}